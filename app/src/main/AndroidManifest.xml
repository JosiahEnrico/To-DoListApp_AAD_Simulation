<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aadexercise.todoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TodoApp"
        tools:ignore="AllowBackup">
        <activity
            android:name="com.aadexercise.todoapp.setting.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.aadexercise.todoapp.ui.list.TaskActivity" />
        <activity
            android:name="com.aadexercise.todoapp.ui.detail.DetailTaskActivity"
            android:parentActivityName="com.aadexercise.todoapp.ui.list.TaskActivity" />
        <activity android:name="com.aadexercise.todoapp.ui.add.AddTaskActivity" />
        <activity
            android:name="com.aadexercise.todoapp.ui.list.TaskActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TodoApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>